<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="8dp"
        android:foregroundGravity="center_horizontal"
        android:src="@drawable/profile_pic"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="2dp"/>

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_marginTop="4dp"
        android:text="SAURAV KHANDELWAL"
        android:textAlignment="center"
        android:textColor="#FFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_name"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:drawableLeft="@drawable/ic_location"
        android:drawableStart="@drawable/ic_location"
        android:textColor="@color/colorTextOrIcons"
        android:text="Kolkata,India"/>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_below="@+id/profile_name"
        android:id="@+id/details_table"
        android:layout_centerInParent="true"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="52dp"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:stretchColumns="1,2,3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Stories"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textAlignment="center"
                    android:text="Following" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:textAlignment="center"
                    android:text="Followers" />


            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:text="1523" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:text="10K" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:text="12K" />

            </TableRow>
        </TableLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_margin="2dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/linked_in"/>


        <ImageView
            android:layout_margin="2dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/google"/>

        <ImageView
            android:layout_margin="2dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/github"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/body"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/details_table">
        <com.tomer.fadingtextview.FadingTextView
            android:layout_below="@+id/details_table"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textColor="@color/colorPrimaryDark"
            app:texts="@array/examples"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            app:timeout="1000"/>

        <TextView
            android:layout_below="@+id/body"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About\n Iâ€™m a B.Tech Passout currently working as a freelancer. When free, I usually love to learn new technology checking out youtube and also checking out new libraries to play with on Github."
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="Follow"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/circle_shape"
            android:layout_centerInParent="true"
            android:layout_below="@id/details_table"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>


</RelativeLayout>